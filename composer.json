{
    "name": "merodiro/settings",
    "type": "library",
    "description": "Easy global settings",
    "keywords": [
        "Merodiro",
        "Settings"
    ],
    "homepage": "https://github.com/Merodiro/Settings",
    "license": "MIT",
    "authors": [{
        "name": "Amr A. Mohammed",
        "email": "merodiro@gmail.com",
        "homepage": "https://github.com/merodiro",
        "role": "Developer"
    }],
    "require": {
        "illuminate/support": "~5.5",
        "php": "~7.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.4.4",
        "graham-campbell/testbench": "^5.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "6.*",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Merodiro\\Settings\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Merodiro\\Settings\\SettingsServiceProvider"
            ],
            "aliases": {
                "Settings": "Merodiro\\Settings\\Facades\\Settings"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
